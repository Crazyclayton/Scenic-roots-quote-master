rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Each user can read/write their own user doc
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Example: employee-only collection (uncomment and tailor)
    // match /employeeOnly/{docId} {
    //   allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "employee";
    // }

    // Public read-only
    match /public/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
